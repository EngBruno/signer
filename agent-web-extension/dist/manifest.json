{
  "manifest_version": 2,
  "name": "Extensão SERPRO Signer",
  "description": "Esta extensão permite que aplicações desenvolvidas pelo SERPRO possam se comunicacar com o componente de assinatura Desktop.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Assinador SERPRO"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://localhost/"
  ],
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "background": {
    "scripts": [
      "lib.min.js",
      "background.js"
    ]
  }
}
